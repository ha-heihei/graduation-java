<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lh.mapper.MaterialMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lh.entity.Material">
        <id column="material_id" property="materialId" />
        <result column="material_name" property="materialName" />
        <result column="material_urls" property="materialUrls" />
        <result column="user_id" property="userId" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        material_id, material_name, material_urls, user_id, create_time
    </sql>

    <select id="querySelfMaterialPageListByConditions" resultType="com.lh.entity.Material">
        select mu.*,m.material_urls from material m join material_user mu on mu.material_id=m.material_id
            ${ew.customSqlSegment}
    </select>


    <select id="queryCollectorMaterialPageList" resultType="com.lh.entity.Material">
        select * from user u
            join material_user mu on u.user_id=mu.user_id
            join material m on mu.material_id=m.material_id
            ${ew.customSqlSegment}
    </select>

    <select id="querySelfMaterialWhereGroup" resultType="com.lh.entity.Group">
        select g.* from work_group g where g.group_id in (
            select group_id from group_material where material_id=#{materialId} and user_id=#{userId}
        )
    </select>


</mapper>
